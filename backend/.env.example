# Backend Environment Variables

# Server Configuration
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database - MongoDB Atlas (Cloud)
# Get this from: https://cloud.mongodb.com
# Format: mongodb+srv://username:password@cluster.mongodb.net/brandtracker
MONGODB_URI=mongodb+srv://your_username:your_password@cluster0.xxxxx.mongodb.net/brandtracker?retryWrites=true&w=majority

# API Keys (Required)
GEMINI_API_KEY=your_gemini_api_key_here
TWITTER_BEARER_TOKEN=your_twitter_bearer_token_here
REDDIT_CLIENT_ID=your_reddit_client_id_here
REDDIT_CLIENT_SECRET=your_reddit_client_secret_here
GOOGLE_NEWS_API_KEY=your_google_news_api_key_here

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password_here

# JWT Secret (for authentication)
JWT_SECRET=your_super_secret_jwt_key_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Data Collection Settings
COLLECTION_INTERVAL_MINUTES=2
MAX_MENTIONS_PER_BATCH=100
SENTIMENT_CONFIDENCE_THRESHOLD=0.7

# Brand Monitoring Configuration (CUSTOMIZE FOR YOUR NEEDS)
MONITORED_BRANDS=RapidQuest,OpenAI,ChatGPT,YourBrandName
MONITORED_KEYWORDS=AI,artificial intelligence,machine learning,automation,hiring,recruitment
CRITICAL_KEYWORDS=crisis,lawsuit,scandal,hack,breach,terrible,worst,awful
POSITIVE_KEYWORDS=amazing,excellent,breakthrough,innovative,outstanding

# Alert Thresholds
NEGATIVE_SENTIMENT_ALERT_THRESHOLD=-0.5
SPIKE_DETECTION_THRESHOLD_PERCENT=50
SPIKE_TIME_WINDOW_MINUTES=60
HIGH_ENGAGEMENT_THRESHOLD=1000